<Page x:Class="PetShop.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PetShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="ИС товары для животных - Авторизация">

    <Grid Background="White">
       
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
            <TextBlock Text="Авторизация" Width="120" Margin=" 0 10 0 0 " ></TextBlock>
            <TextBlock Text="Логин" Width="120" Margin=" 0 10 0 0 "></TextBlock>
            <TextBox x:Name="Login" Margin=" 0 10 0 0 "></TextBox>
            <TextBlock Text="Пароль" Width="120" Margin=" 0 10 0 0 "></TextBlock>
            <PasswordBox x:Name="Password" Margin=" 0 10 0 0 "></PasswordBox>
            <Button x:Name ="LoginBtn" Content="Вход" Width="120" Margin=" 0 10 0 0 " Click="LoginBtn_Click"></Button>
            <Button x:Name="GuestBtn" Content="Войти как гость" Width="120" Margin=" 0 10 0 0 " Click="GuestBtn_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
